<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fece2f"
    tools:context=".GameScreenActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="65dp"
        android:id="@+id/imgBtn">


        <Button
            android:id="@+id/btnEnd"
            android:layout_width="150dp"
            android:layout_height="78dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="250dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="20dp"
            android:text="End"
            tools:layout_editor_absoluteX="271dp"
            tools:layout_editor_absoluteY="582dp" />

        <Button
            android:id="@+id/btnSoundOn"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="320dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="620dp"
            android:foreground="@android:drawable/ic_lock_silent_mode_off"
            android:text=""
            tools:layout_editor_absoluteX="275dp"
            tools:layout_editor_absoluteY="582dp" />

        <Button
            android:id="@+id/btnSoundOff"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="320dp"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="580dp"
            android:foreground="@android:drawable/ic_lock_silent_mode"
            android:text=""
            tools:layout_editor_absoluteX="275dp"
            tools:layout_editor_absoluteY="582dp" />

        <ImageView
            android:id="@+id/btnWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/blue" />

        <TextView
            android:id="@+id/tv_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/btnWord"
            android:layout_alignTop="@+id/btnWord"
            android:layout_alignEnd="@+id/btnWord"
            android:layout_alignBottom="@+id/btnWord"
            android:layout_marginStart="23dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="-30dp"
            android:layout_marginBottom="51dp"
            android:text="Hello World"
            android:textColor="#0B0A0A"
            android:textSize="20sp"
            />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>